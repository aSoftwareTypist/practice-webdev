{
  "compilerOptions": {
    /* Language & runtime */
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],

    /* Project structure */
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,

    /* Module resolution */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Type safety */
    "strict": true,
    "alwaysStrict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,

    /* Interop */
    "skipLibCheck": true
  },
  "include": ["src"]
}
